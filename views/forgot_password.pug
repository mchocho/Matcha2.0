extends layout

block content
	include header
	.wrapper(align='center')
		h2 Forgot your password?
		form(method='POST')
			if message
				span #{message}
			span.error #{error_0} #{error_2}
			label
				| Email address
				input.txt(type='text' name='email' required='')
			span.error #{error_1}
			label
				| New Password
				input.txt(type='password' name='newPassword' required='')
			label
				| Confirm Password
				input.txt(type='password' name='confPassword' required='')
			input(type='submit' name='cupid' value='Submit')