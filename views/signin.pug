extends layout

block content
	body.signin
		// what is this header here?
		header
			a(href='/')
				div
					img(src='images/logo.png')
				.heading
					h1 Cupid's Arrow
			.profile_container
				a(href='/signup') Sign up | 
				a(href='/') Sign in
		.wrapper(align='center')
			h2 Meet and fall in love!
			form#signin(method='POST')
				if message
					span #{message}
				span.error #{errors[0]} #{errors[2]}
				label
					| Username
					input.txt(type='text', name='username', autofocus='true', required='')
				span.error #{errors[1]}
				label
					| Password
					input.txt(type='password', name='password', required='')
				input.btn.btn-primary.btn-lg(type='submit' name='cupid' value='Submit')
				br
				span Forgot your password?
				a(href='/forgot_password')  Click here